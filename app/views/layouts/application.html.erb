<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    <% end %>
    </div>

    <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
    <% end %>

    <% if user_signed_in? %>
      <p>
        Hello <%= current_user.email %>!<br>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class:'text-white' %>
      </p>
    <% else %>
      <p>
        <%= link_to 'Sign in', new_user_session_path, class:'text-white'%><br>
        <%= link_to 'Sign up', new_user_registration_path, class:'text-white'%>
      </p>
    <% end %>


    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
